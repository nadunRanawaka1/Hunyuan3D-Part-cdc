# Include documentation files
include README.md
include INSTALL.md
include LICENSE
include NOTICE

# Include configuration files
include pyproject.toml
include setup.py

# Include model weights directory structure (but not actual large files)
recursive-include weights *.md

# Include demo assets (small files only)
recursive-include demo/assets *.md

# Include images
recursive-include images *.jpg *.png *.gif

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .git*
global-exclude .DS_Store
global-exclude *.egg-info

# Exclude results and large files
prune demo/results
prune weights/*.safetensors
prune weights/*.ckpt
prune weights/*.pt
prune weights/*.pth

